&lt;/span&gt;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;&lt;/div&gt;&lt;input type="radio" class="toggle" name="tabs-tf-setup" id="tabs-tf-setup-2" /&gt;
 &lt;label for="tabs-tf-setup-2"&gt;Windows&lt;/label&gt;
 &lt;div class="book-tabs-content markdown-inner"&gt;&lt;div class="highlight"&gt;&lt;pre tabindex="0" style="color:#f8f8f2;background-color:#272822;-moz-tab-size:4;-o-tab-size:4;tab-size:4;"&gt;&lt;code class="language-pwsh" data-lang="pwsh"&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;$tf_version = &lt;span style="color:#e6db74"&gt;&amp;#34;1.6.4&amp;#34;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;$tf_archive = &lt;span style="color:#e6db74"&gt;&amp;#34;https://releases.hashicorp.com/terraform/&lt;/span&gt;${tf_version}&lt;span style="color:#e6db74"&gt;/terraform_&lt;/span&gt;${tf_version}&lt;span style="color:#e6db74"&gt;_windows_amd64.zip&amp;#34;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;Invoke-WebRequest -Uri $tf_archive -OutFile &lt;span style="color:#e6db74"&gt;&amp;#34;&lt;/span&gt;${pwd}&lt;span style="color:#e6db74"&gt;/terraform_&lt;/span&gt;${tf_version}&lt;span style="color:#e6db74"&gt;_windows_amd64.zip&amp;#34;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;Add-Type -Assembly System.IO.Compression.FileSystem
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;$zip = [&lt;span style="color:#66d9ef"&gt;IO.Compression.ZipFile&lt;/span&gt;]::OpenRead(&lt;span style="color:#e6db74"&gt;&amp;#34;&lt;/span&gt;${pwd}&lt;span style="color:#e6db74"&gt;/terraform_&lt;/span&gt;${tf_version}&lt;span style="color:#e6db74"&gt;_windows_amd64.zip&amp;#34;&lt;/span&gt;)
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;$Executables = $zip.Entries | Where-Object {$_.Name &lt;span style="color:#f92672"&gt;-like&lt;/span&gt; &lt;span style="color:#e6db74"&gt;&amp;#39;*.exe&amp;#39;&lt;/span&gt;}
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;&lt;span style="color:#66d9ef"&gt;foreach&lt;/span&gt; ($Executable &lt;span style="color:#66d9ef"&gt;in&lt;/span&gt; $Executables) {
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; [&lt;span style="color:#66d9ef"&gt;System.IO.Compression.ZipFileExtensions&lt;/span&gt;]::ExtractToFile($Executable, &lt;span style="color:#e6db74"&gt;&amp;#34;&lt;/span&gt;${pwd}&lt;span style="color:#e6db74"&gt;/&lt;/span&gt;$($Executable.Name)&lt;span style="color:#e6db74"&gt;&amp;#34;&lt;/span&gt;, $True)
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;}
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;$zip.Dispose()
&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;Remove-Item -Path &lt;span style="color:#e6db74"&gt;&amp;#34;&lt;/span&gt;${pwd}&lt;span style="color:#e6db74"&gt;/terraform_&lt;/span&gt;${tf_version}&lt;span style="color:#e6db74"&gt;_windows_amd64.zip&amp;#34;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;&lt;/div&gt;&lt;/div&gt;</description></item></channel></rss>